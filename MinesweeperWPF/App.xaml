<Application x:Class="MinesweeperWPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:MinesweeperWPF"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles/ButtonTheme.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <LinearGradientBrush x:Key="WindowBackground" StartPoint="0.5,0" EndPoint="0.5,1">
                <GradientStop Color="#FF18233F" Offset="1"/>
                <GradientStop Color="#FFC85547" Offset="0"/>
            </LinearGradientBrush>
            
        </ResourceDictionary>
    </Application.Resources>
</Application>
